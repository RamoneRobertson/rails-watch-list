<div class="banner">
  <div class="banner-text">
    <h1><%= @list.name %></h1>
  </div>
</div>
<div>
  <%= link_to "Add Bookmark", new_list_bookmark_path(@list), class: "btn btn-dark m-3"%>
</div>
<div class="bookmark-grid">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="bookmark-card">
      <div class="wrapper">
        <div class="box-area">
          <div class="box">
            <%= image_tag bookmark.movie.poster_url, alt: "text" %>
            <div class="overlay">
              <p><%= bookmark.movie.overview %></p>
              <span>rating: <%= bookmark.movie.rating %></span>
              <%= link_to "Delete", bookmark_path(bookmark), data: { "turbo-method": :delete, turbo_confirm: "Delete #{bookmark.movie.title} from this list?" } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
