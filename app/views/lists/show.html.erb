<div class="container p-3">
  <h1><%= @list.name %></h1>
  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-4 p-3 card">
        <h5><%= bookmark.movie.title %></h5>
        <p><%= bookmark.comment %></p>
        <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete} %>
        <span><%= bookmark.movie.rating %></span>
      </div>
    <% end %>
  </div>
  <%= link_to "+", new_list_bookmark_path(@list) %>
</div>
